
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

enum Location { INDIA, ABROAD };

struct Destination {
  char name[50];
  int cost;
  enum Location location;
  struct Destination *left;
  struct Destination *right;
};

struct Destination *createDestination(char *name, int cost, enum Location location) {
  struct Destination *destination = (struct Destination*)malloc(sizeof(struct Destination));
  strcpy(destination->name, name);
  destination->cost = cost;
  destination->location = location;
  destination->left = NULL;
  destination->right = NULL;
  return destination;
}

struct Destination *insertDestination(struct Destination *root, char *name, int cost, enum Location location) {
  if (root == NULL) 
  return createDestination(name, cost, location);
  if (cost <= root->cost)
    root->left = insertDestination(root->left, name, cost, location);
  else
    root->right = insertDestination(root->right, name, cost, location);
  return root;
}

void inOrderTraversal(struct Destination *root) {
  if (root == NULL) 
  return;
  inOrderTraversal(root->left);
  printf("Destination: %s, Cost: %d, Location: %s\n", root->name, root->cost, (root->location == INDIA) ? "India" : "Abroad");
  inOrderTraversal(root->right);
}

int main() {
  struct Destination *root = NULL;

  root = insertDestination(root, "Goa", 5000, INDIA);
  root = insertDestination(root, "Manali", 6000, INDIA);
  root = insertDestination(root, "Paris", 20000, ABROAD);
  root = insertDestination(root, "New York", 25000, ABROAD);
  root = insertDestination(root, "Thailand", 15000, ABROAD);

  inOrderTraversal(root);
  
  return 0;
}
